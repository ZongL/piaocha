/* 医保票据解析助手 - 全局样式 */

/* 基础样式重置 */
page {
  background-color: #f8fafc;
  font-family: 'Noto Sans SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  line-height: 1.6;
  color: #1f2937;
  font-size: 32rpx;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

/* 渐变背景 */
.medical-gradient {
  background: linear-gradient(135deg, #2563eb 0%, #10b981 100%);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #2563eb 0%, #10b981 100%);
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.btn-secondary {
  background: #f3f4f6;
  color: #374151;
  border-radius: 16rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-danger {
  background: #ef4444;
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #ffffff;
  transition: border-color 0.3s ease;
}

.input-field:focus {
  border-color: #2563eb;
  outline: none;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-primary {
  background: #dbeafe;
  color: #2563eb;
}

.tag-success {
  background: #d1fae5;
  color: #10b981;
}

.tag-warning {
  background: #fef3c7;
  color: #f59e0b;
}

.tag-danger {
  background: #fee2e2;
  color: #ef4444;
}

/* 统计卡片 */
.stat-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-content {
  flex: 1;
}

.list-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.list-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.list-arrow {
  width: 32rpx;
  height: 32rpx;
  color: #9ca3af;
}

/* 网格布局 */
.grid {
  display: grid;
  gap: 20rpx;
}

.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

